{
  "name": "vue3-apollo",
  "type": "module",
  "version": "0.0.1",
  "private": false,
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.cjs"
    },
    "./nuxt": {
      "types": "./dist/nuxt/types.d.mts",
      "import": "./dist/nuxt/module.mjs"
    }
  },
  "main": "./dist/core/index.cjs",
  "module": "./dist/core/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:core && pnpm build:nuxt",
    "build:core": "unbuild --config core/build.config.ts",
    "build:apollo": "graphql-codegen",
    "build:nuxt": "nuxt-module-build build --cwd nuxt",
    "dev:vue": "vite --config example/vite.config.ts --root example",
    "dev:nuxt": "nuxt-module-build build --stub --cwd nuxt --outDir ../dist/nuxt && nuxt-module-build prepare --cwd nuxt && nuxi dev nuxt/playground",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "pack:try": "pnpm build && npm pack"
  },
  "peerDependencies": {
    "@apollo/client": "^4",
    "@nuxt/kit": "^4",
    "graphql": "^16",
    "nuxt": "^4",
    "vue": "^3.5.0"
  },
  "peerDependenciesMeta": {
    "@nuxt/kit": {
      "optional": true
    },
    "nuxt": {
      "optional": true
    }
  },
  "dependencies": {
    "@vueuse/core": "^13.9.0"
  },
  "devDependencies": {
    "unbuild": "^3.6.1",
    "@antfu/eslint-config": "^5.4.1",
    "@apollo/client": "^4.0.7",
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/client-preset": "^5.1.0",
    "@graphql-eslint/eslint-plugin": "^4.4.0",
    "@nuxt/kit": "^4.1.3",
    "@nuxt/module-builder": "^1.0.2",
    "@types/node": "^24.6.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.36.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "graphql": "^16.11.0",
    "nuxt": "^4.1.3",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vue": "^3.5.22"
  }
}
