{
  "name": "root",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "build": "pnpm run build:core && pnpm run build:nuxt && pnpm run build:docs",
    "build:core": "pnpm --filter @vue3-apollo/core run build",
    "build:docs": "pnpm --filter @vue3-apollo/docs run build",
    "build:nuxt": "pnpm --filter @vue3-apollo/nuxt run prepack",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "dev:core": "pnpm --filter @vue3-apollo/core run dev",
    "dev:docs": "pnpm --filter @vue3-apollo/docs run dev",
    "dev:nuxt": "pnpm --filter @vue3-apollo/nuxt run dev",
    "dev:web": "pnpm --filter @vue3-apollo/web run dev",
    "lint": "eslint  .",
    "lint:fix": "eslint . --fix",
    "release": "pnpm build && changeset publish",
    "typecheck": "pnpm run typecheck:core && pnpm run typecheck:nuxt && pnpm run typecheck:web",
    "typecheck:core": "pnpm --filter @vue3-apollo/core run typecheck",
    "typecheck:nuxt": "pnpm --filter @vue3-apollo/nuxt run typecheck",
    "typecheck:web": "pnpm --filter @vue3-apollo/web run typecheck",
    "update:dependencies": "ncu --deep -u",
    "version": "changeset version && pnpm install --lockfile-only"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.1.0",
    "@changesets/cli": "^2.29.7",
    "eslint": "^9.38.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1"
  }
}
