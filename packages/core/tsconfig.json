{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "noEmit": false,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "rootDir": "."
  },
  "include": ["src/**/*"]
}
