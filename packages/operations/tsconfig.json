{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": ".",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "noEmit": false,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "codegen.ts"
  ]
}
